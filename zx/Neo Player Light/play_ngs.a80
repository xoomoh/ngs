		include macros.a80
	        include ports_ngs.a80
	        include vers.a80

GSCOD		EQU 0X8000			;адрес куда закидывать код на нгс

OPISAT		EQU 0X6000			;адрес складирования описателя при приеме с нгс

SIZ_PAT		EQU 0X14

		ORG 0X8000
START		DI
		LD HL,0X0110
		LD (0X5C09),HL			;установка переменной клавиатуры
		LD (OLD_STACK),SP		;сохранение стека
		LD SP,0
OLD_STACK	EQU $-2
		RES 3,(IY+48)
		RES 5,(IY+1)

;удержание при запуске CS =  Turbo off
		LD A,0XFE
		IN A,(0XFE)
		RRA
		LD A,0
		JR C,$+4
		LD A,0X10
		LD BC,0XEFF7
		OUT (C),A

;удержание при запуске SS = reset NeoGS
		LD A,0X7F
		IN A,(0XFE)
		RRA
		RRA
		JR NC,LOOP21

;тест наличия GS/NeoGS
		LD B,0X30			;для определения наличия нгс используется
		XOR A				;команда 0X1D с параметром =0
		OUT (GSDAT),A			;ждем ответа 0x30 прерываний
		LD A,0X1D
		OUT (GSCOM),A
LOOP22		EI
		HALT
		DI
		DEC B
		JR Z,LOOP21			;счетчик обнулился, а может нгс висит?
		IN A,(GSCOM)			;ждем сброса команд бита
		RRA
		JR C,LOOP22
		IN A,(GSDAT)			;команд бит сбросился, читаем ответ из дата порта
		XOR A				;попытка получить флаговый байт с нгс
		OUT (GSDAT),A			;при первом запуске команда 0xFF еще не пропатчена
		LD A,0XFF
		LD B,0X30			;ждем ответа 0x30 прерываний
		OUT (GSCOM),A
LOOP001		EI
		HALT
		DI
		DEC B
		JR Z,LOOP21			;счетчик обнулился, пробуем перезапустить нгс
		IN A,(GSCOM)
		RRA
		JR C,LOOP001
		JR LOOP13			;нгс ответил на команду, подключаемся к внутреннему плееру

;принудительный перезапуск NeoGS
LOOP21		LD A,M_DBIT
		OUT (GSCTR),A			;полный сброс нгс
		EI
		HALT
		HALT
		DI
		LD A,0XF3
		OUT (GSCOM),A			;холодный перезапуск нгс прошивки
		LD B,0X30			;ждем 0x30 прерываний
LOOP25		EI
		HALT
		HALT
		DI
		DEC B
		JP Z,NO__GS			;нет ответа, нет нгс
		IN A,(GSCOM)
		RRA
		JR C,LOOP25			;команд бит изменился, продолжаем
;загрузка и запуск кода на NeoGS
RST_NGS_CODE	LD A,0X23			;запрос количества страниц памяти
		OUT (GSCOM),A			;для определения в какую страницу плеер закидывать
		CALL WC
		IN A,(GSDAT)
		OR 0X3F
		LD D,A
		LD E,MPAG			;включаем стандартной командой прошивки
		CALL OUTPORT			;страницу на нгс для загрузки внутреннего плеера
		LD BC,GSDAT			;стандартными средствами грузим код на нгс 
		LD DE,FAT_END-GO_YES
		LD HL,GSCOD
		OUT (C),E
		LD A,0X14
		OUT (GSCOM),A
		CALL WC
		OUT (C),D
		CALL WD
		OUT (C),L
		CALL WD
		OUT (C),H
		CALL WD
		LD HL,GO_YES
LODCOD		OUTI
		CALL WD
		DEC DE
		LD A,D
		OR E
		JR NZ,LODCOD
		LD HL,GSCOD			;код загрузили, запускаем
		OUT (C),L
		LD A,0X13
		OUT (GSCOM),A
		CALL WC
		OUT (C),H
		EI
		HALT
		HALT
		DI				;подождали 2 прерывания запуска кода
;		JP Warm

LOOP13		LD A,7
		CALL CLS			;очистили экран
		LD DE,0X4800
		LD HL,MESS20			;печать текста о поиске на SD карточке
		CALL PRINT
		LD A,0X1D			;подаем команду проверки что на нгс крутится
		OUT (GSDAT),A
		LD A,0X1F
		OUT (GSCOM),A
		LD B,0
		CALL WAITGS			;ожидаем ответа покручивавая палочку
		IN A,(GSDAT)			;читаем ответ
		CP 0X8B	
		JR Z,RST_NGS_CODE		;если 0x8B то ответила стандартная прошивка
		CP 0X77
		JR Z,Warm			;если ответ 0x77, то ответил внутренний плеер
		CP 0XEE
		JR NZ,LOOP17			;SD карта найдена?
		LD A,7
		CALL CLS
		LD HL,MESS13
		LD DE,0X5000
LOOP20		CALL PRINT
		LD HL,MESS15
		LD DE,0X5040
		CALL PRINT
		LD HL,MESS16
		LD DE,0X5080
		CALL PRINT
		JR LOOP16

LOOP17		CP 0XDD
		JR NZ,LOOP26			;на SD карте FAT не обнаружен
		LD A,7
		CALL CLS
		LD HL,MESS14
		LD DE,0X5000
		JR LOOP20

LOOP26		CP 0XBB
		JR NZ,LOOP27
		LD A,7
		CALL CLS
		LD HL,MESS23
		LD DE,0X5000
		JR LOOP20

LOOP27		CP 0XCC
		JP NZ,RST_NGS_CODE		;плата GS стараго типав
		JP NO_NGS

LOOP16		EI
		HALT
		DI
		BIT 5,(IY+1)
		JR Z,LOOP16
		LD A,(IY-0X32)
		RES 5,(IY+1)
		CP 0X0D
		JP Z,START
		CP 0X20
		JP Z,RESCOMP
		JR LOOP16

Warm		LD A,7
		CALL CLS			;очистка экрана
		CALL MORDALL			;вывод основных надписей
		LD A,0X15
		LD DE,0X400D
		CALL READ5BT			;вывод кол-ва найденного
		CALL NAMELNG			;вывод имени текущего файла
		CALL DAT_VTS			;вывод инфы текущего файла
LOOP		XOR A
		CALL GET_VTS
		BIT 7,A
		JP NZ,EJECT
;		AND 5
;		CP 5
;		JR Z,LOOPM
		CALL FGETVTS
		LD A,H
		PUSH AF
		BIT 5,A
		CALL NZ,NAMELNG
		POP AF
		BIT 1,A
		JR NZ,LOOPM
		LD DE,0X486B
		CALL READSEC			;время играния
		CALL BITRATE
		JR LOOP14

LOOPM		CALL POSMOD
LOOP14		EI
		HALT
		DI
		BIT 5,(IY+1)
		JR Z,LOOP
		LD A,(IY-0X32)
		LD B,A
		RES 5,(IY+1)
		CALL FGETVTS
		LD A,H
		BIT 1,A
		LD HL,MODCOM
		JR NZ,LOOP14_1
		LD HL,MP3COM
LOOP14_1	LD DE,4
LOOP14_2	LD A,(HL)
		AND A
		JR Z,LOOP
		CP B
		JR Z,RDCOMM
		ADD HL,DE
		JR LOOP14_2

RDCOMM		INC HL
		LD A,(HL)
		INC HL
		LD E,(HL)
		INC HL
		LD D,(HL)
		EX DE,HL
		JP (HL)

MP3COM		DB "6",0X09
		DW EXE1
		DB "7",0X08
		DW EXE1
		DB "8",0X07
		DW EXE1
		DB "9",0X06
		DW EXE2
		DB 0X0D,0X0A
		DW EXE1
		DB ":",0X17
		DW EXE1
;		DB "q",0X03
;		DW EXE3
;		DB "a",0X01
;		DW EXE3
;		DB "w",0X0C
;		DW EXE3
;		DB "s",0X04
;		DW EXE3
;		DB "e",0X30
;		DW EXE3
;		DB "d",0X10
;		DW EXE3
;		DB "r",0XC0
;		DW EXE3
;		DB "f",0X40
;		DW EXE3

MODCOM		DB "1",0X01
		DW EXE1
		DB "2",0X02
		DW EXE4
		DB "3",0X03
		DW EXE4
		DB "4",0X04
		DW EXE4
		DB "5",0X05
		DW EXE1
		DB "!",0X18
		DW EXE1
		DB "%",0X19
		DW EXE1
		DB "0",0X00
		DW EJECT
		DB " ",0X00
		DW RESCOMP
		DB 0

EXE1		OUT (GSDAT),A
		LD A,0X1F
		OUT (GSCOM),A
		CALL WC
		JP LOOP-3

EXE2		OUT (GSDAT),A
		LD A,0X1F
		OUT (GSCOM),A
		CALL WC
		CALL PRTTBL
		JP LOOP-3

EXE3		PUSH AF
		LD A,0X1A
		OUT (GSDAT),A
		LD A,0X1F
		OUT (GSCOM),A
		CALL WC
		POP AF
		OUT (GSDAT),A
		CALL PRTTBL
		JP LOOP

EXE4		OUT (GSDAT),A
		LD A,0X1F
		OUT (GSCOM),A
		CALL WC
		JP LOOP

;ожидание отпускания кнопки и сброс
RESCOMP		CALL NANYKEY
		XOR A
		LD BC,0X7FFD
		OUT (C),A
		JP 0

WAITGS		LD E,B
		LD D,0
		LD HL,VENTIL
		ADD HL,DE
		LD A,(HL)
		LD DE,0X481B
		CALL PRISYM
		LD C,5
		EI
		HALT
		DI
		DEC C
		JR NZ,$-4
		IN A,(GSCOM)
		RRA
		RET NC
		INC B
		LD A,4
		CP B
		JR NZ,WAITGS
		LD B,0
		JR WAITGS

;распечатка номера трека и имени играемого файла
NAMELNG		LD A,0X16
		LD DE,0X484D
		CALL READ5BT			;текущий номер трека
		LD HL,0X8000
		LD A,0X11
		OUT (GSDAT),A
		LD A,0X1F
		OUT (GSCOM),A
		CALL WC				;получить длинное имя
		LD A,H
		OUT (GSDAT),A
		CALL WD
		LD A,L
		OUT (GSDAT),A
;		CALL WD
		LD HL,OPISAT
		LD E,0
		PUSH HL
		CALL INI_E
		LD HL,0X5000
		LD D,H
		LD E,L
		LD BC,0X07FF
		INC E
		LD (HL),L
		LDIR
		POP HL
		LD B,0X20
		LD DE,0X5000
		CALL PRINT_B
		LD B,0X20
		LD DE,0X5020
		CALL PRINT_B
		LD B,0X20
		LD DE,0X5040
		CALL PRINT_B
		LD B,0X20
		LD DE,0X5060
		CALL PRINT_B
		LD B,0X20
		LD DE,0X5080
		CALL PRINT_B
		LD B,0X20
		LD DE,0X50A0
		CALL PRINT_B
		LD B,0X20
		LD DE,0X50C0
		CALL PRINT_B
		LD B,0X20
		LD DE,0X50E0
		CALL PRINT_B
		JP MORDAR

DAT_VTS		CALL FGETVTS		;запрос флагового байта
		LD DE,0X48B0
		BIT 1,H
		RET NZ			;это MOD
		BIT 7,H
		LD A,0X2B
		JR NZ,$+4
		LD A,"-"
		CALL PRISYM		;вывод положения TREBLE/BASS
		BIT 0,H
		LD A,"+"
		JR NZ,$+4
		LD A,"-"
		LD DE,0X4890
		CALL PRISYM		;вывод положения VIRTUAL SURROUND
		BIT 6,H
		LD A,"+"
		JR NZ,$+4
		LD A,"-"
		LD DE,0X48DF
		CALL PRISYM		;вывод положения MUTE ON/OFF
		LD A,L
		LD DE,0X48D0
		CALL PRIHEX

;вывод индикатора SOFT/HARD RESET
		BIT 4,H
		LD HL,MESS16+2
		JR Z,DATVTS1
		RES 5,(HL)
		INC HL
		RES 5,(HL)
		INC HL
		RES 5,(HL)
		INC HL
		RES 5,(HL)
		JR DATVTS2

DATVTS1		SET 5,(HL)
		INC HL
		SET 5,(HL)
		INC HL
		SET 5,(HL)
		INC HL
		SET 5,(HL)
DATVTS2		LD HL,MESS16
		LD DE,0X4014
		CALL PRINT

;получение и распечатка инфы темброблока
PRTTBL		
;		CALL FGETVTS
;		BIT 3,H
;		JR Z,EMPTSTR
;		BIT 7,H
;		JR Z,EMPTSTR
;		LD A,0X1B
;		OUT (GSDAT),A
;		LD A,0X1F
;		OUT (GSCOM),A
;		CALL WC
