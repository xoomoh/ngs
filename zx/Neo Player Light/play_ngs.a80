;		LD E,8
;		PUSH HL
;		CALL INI_E
;		LD DE,0X48B1
;		LD B,2
;		POP HL
;		CALL PRINT_B
;		LD A,"0"
;		CALL PRISYM
;		LD A,"0"
;		CALL PRISYM
;		LD A,"0"
;		CALL PRISYM
;		LD A,"/"
;		CALL PRISYM
;		LD B,2
;		CALL PRINT_B
;		INC E
;		LD B,2
;		CALL PRINT_B
;		LD A,"0"
;		CALL PRISYM
;		LD A,"/"
;		CALL PRISYM
;		LD B,2
;		JP PRINT_B

;печать пустой строки
EMPTSTR		LD HL,EMPT16+1
		LD DE,0X48B1
		JP PRINT

;распечатка когда ничего не играет
BITRAT1		LD HL,EMPT16+2
		LD DE,0X4856
		PUSH HL
		LD B,5
		CALL PRINT_B
		LD DE,0X4878
		LD B,3
		POP HL
		PUSH HL
		CALL PRINT_B
		POP HL
		LD B,0X0C
		LD DE,0X4834
		JP PRINT_B

;печать MP3 битрейта
BITRATE		LD A,0X1C
		OUT (GSDAT),A
		LD A,0X1F
		OUT (GSCOM),A
		CALL WC
		CALL WN
		IN A,(GSDAT)
		LD B,A
		CALL WN
		IN A,(GSDAT)
		LD C,A
		LD A,B
		AND 0XE0
		CP %10100000
		JR Z,BITRAT1
		LD A,C
		AND 3
		LD L,A
		ADD A,A
		ADD A,A
		ADD A,L
		LD L,A
		LD H,0
		LD A,C
		RRCA
		RRCA
		AND 3
		LD DE,SR0
		JR Z,BITRAT3
		DEC A
		LD DE,SR1
		JR Z,BITRAT3
		LD DE,SR2
BITRAT3		ADD HL,DE
		LD DE,0X4856
		PUSH BC
		LD B,5
		CALL PRINT_B
		POP BC
		LD A,C
		RLCA
		RLCA
		AND 3
		ADD A,A
		ADD A,A
		LD L,A
		ADD A,A
		ADD A,L
		LD L,A
		LD H,0
		LD DE,REJCHAN
		ADD HL,DE
		PUSH BC
		LD B,0X0C
		LD DE,0X4834
		CALL PRINT_B
		POP BC
		LD A,B
		AND 0X0F
		LD L,A
		ADD A,A
		ADD A,L
		LD L,A
		LD H,0
		LD A,C
		AND 3
		CP 3
		JR NZ,BITRAT4
		LD A,0X30
		ADD A,L
		LD L,A
BITRAT4		LD A,C
		AND 0X30
		SUB 0X10
		LD DE,L3ID0
		JR Z,BITRAT2
		SUB 0X10
		LD DE,L2ID0
		JR Z,BITRAT2
		LD DE,L1ID0
BITRAT2		ADD HL,DE
		LD B,3
		LD DE,0X4878
		JP PRINT_B

;получение и распечатка кол-ва найденных файлов (15)
;или номера текущего файла (16)
READ5BT		OUT (GSDAT),A
		LD A,0X1F
		OUT (GSCOM),A
		CALL WC
		CALL WN
		IN A,(GSDAT)
		CALL PRISYM
		CALL WN
		IN A,(GSDAT)
		CALL PRISYM
		CALL WN
		IN A,(GSDAT)
		CALL PRISYM
		CALL WN
		IN A,(GSDAT)
		CALL PRISYM
		CALL WN
		IN A,(GSDAT)
		JP PRISYM

;получение времени проигрывания в
;текстовом виде и распечатка
READSEC		LD A,0X0B
		OUT (GSDAT),A
		LD A,0X1F
		OUT (GSCOM),A
		CALL WC
		CALL WN
		IN A,(GSDAT)
		CALL PRISYM
		CALL WN
		IN A,(GSDAT)
		CALL PRISYM
		LD A,0X3A
		CALL PRISYM
		CALL WN
		IN A,(GSDAT)
		CALL PRISYM
		CALL WN
		IN A,(GSDAT)
		CALL PRISYM
		LD A,0X3A
		CALL PRISYM
		CALL WN
		IN A,(GSDAT)
		CALL PRISYM
		CALL WN
		IN A,(GSDAT)
		JP PRISYM

;при отстствии NeoGS выход в 128 басик
NO_NGS		LD A,7
		CALL CLS
		LD DE,0X4809
		LD HL,MESS17
		CALL PRINT
		LD DE,0X4846
		LD HL,MESS19
		CALL PRINT
		CALL NANYKEY
		CALL ANYKEY
		CALL NANYKEY
BAS128		XOR A
		LD BC,0X7FFD
		OUT (C),A
		JP 0

;ждем нажатия кнопки
ANYKEY		XOR A
		IN A,(0XFE)
		CPL
		AND 0X1F
		JR Z,$-6
		RET

;ждем отпускания кнопки
NANYKEY		XOR A
		IN A,(0XFE)
		CPL
		AND 0X1F
		JR NZ,$-6
		RET

;при отсутсвии GS выход в 128 басик
NO__GS		LD A,7
		CALL CLS
		LD DE,0X480A
		LD HL,MESS18
		CALL PRINT
		LD DE,0X4846
		LD HL,MESS19
		CALL PRINT
		CALL ANYKEY
		CALL NANYKEY
		JR BAS128

;печать текста до байта 0 или пока B не обнулица
PRINT_B		LD A,(HL)
		AND A
		RET Z
		INC HL
		CALL PRISYM
		DJNZ PRINT_B
		RET

;печать текста до байта 0
PRINT		LD A,(HL)
		INC HL
		AND A
		RET Z
		CALL PRISYM
		JR PRINT

MORDALL		LD HL,MESS1
		LD DE,0X4000
		CALL PRINT
		LD HL,MESS16
		LD DE,0X4014
		CALL PRINT
		LD HL,MESS2
		LD DE,0X4040
		CALL PRINT
		LD HL,MESS3
		LD DE,0X4060
		CALL PRINT
		LD HL,MESS4
		LD DE,0X4080
		CALL PRINT
		LD HL,MESS5
		LD DE,0X40A0
		CALL PRINT
		LD HL,MESS6
		LD DE,0X40C0
		CALL PRINT
		LD HL,MESS7
		LD DE,0X4800
		CALL PRINT
		LD HL,MESS8
		LD DE,0X4840
		CALL PRINT
		LD HL,MESS24
		LD DE,0X48E0+((32-(EMESS24-MESS24))/2)
		CALL PRINT
		LD A,3
		CALL GET_VTS
		LD HL,0X59E0
		LD B,0X20
		AND 0X0C
		LD C,A
		XOR 0X0C
		ADD A,A
		OR 0X21
		LD (HL),A
		INC L
		DJNZ $-2
		LD A,C
		RRCA
		RRCA
		ADD A,"0"		;номер версии MP3 чипа
		LD DE,0X48FF
		CALL PRISYM
MORDAR		LD A,3
		CALL GET_VTS
		BIT 1,A
		JR NZ,MORDMOD
		LD HL,MESS9
		LD DE,0X4860
		CALL PRINT
		LD HL,MESS10
		LD DE,0X48A0
		CALL PRINT
		LD HL,MESS11
		LD DE,0X4880
		CALL PRINT
		LD HL,MESS12
		LD DE,0X48C0
		CALL PRINT
		LD HL,MESSEM
		LD DE,0X48D3
		CALL PRINT
		LD HL,MESS26
		LD DE,0X485C
		CALL PRINT
		LD HL,MESS27
		LD DE,0X487C
		CALL PRINT
		JP PRTTBL

MORDMOD		LD HL,EMPT16+3
		LD DE,0X4853
		CALL PRINT
		LD HL,EMPT16
		LD DE,0X4890
		CALL PRINT
		LD HL,EMPT16
		LD DE,0X48B0
		CALL PRINT
		LD HL,EMPT16
		LD DE,0X4830
		CALL PRINT
		LD HL,MOD00
		LD DE,0X4860
		CALL PRINT
		LD HL,EMPT16
